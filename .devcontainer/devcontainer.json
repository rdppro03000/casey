{
  "name": "My Project Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18-bullseye", // Use a Node.js image
  "hostRequirements": {
    "cpus": 8,
    "memory": "32gb",
    "storage": "64gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "postCreateCommand": "npm install", // Automatically install dependencies after container creation
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint", // Example: ESLint extension
        "streetsidesoftware.code-spell-checker" // Example: Spell checker extension
      ]
    }
  },
  "forwardPorts": [3000], // Forward port 3000 for local development
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash" // Set default terminal to bash
  }
}
